<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:spinnerStyle">@style/Spinner</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--<item name="colorControlNormal">@color/md_light_primary_text</item>-->
    </style>

    <style name="Spinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="MaterialButtonPrimary" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/md_dark_primary_text</item>
        <item name="rd_enable">true</item>
    </style>

    <style name="MaterialButtonAccent" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/md_dark_primary_text</item>
        <item name="rd_enable">true</item>
    </style>

    <style name="MaterialButtonTransparent" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/md_light_primary_text</item>
        <item name="rd_enable">true</item>
    </style>

    <style name="MaterialButtonGrey" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textColor">@color/md_light_primary_text</item>
        <item name="rd_enable">true</item>
    </style>

    <style name="TextInputLayout.Hint" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayout.TextInputEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/md_grey_500</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>
</resources>
