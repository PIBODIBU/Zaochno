<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/progressInactive"
                android:endColor="@color/progressInactive"
                android:startColor="@color/progressInactive" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/progressActive"
                    android:startColor="@color/progressActive" />
            </shape>
        </clip>
    </item>
</layer-list>